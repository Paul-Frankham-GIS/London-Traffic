<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>London Traffic Map</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet-traffic/dist/leaflet-traffic.js"></script>
    <style>
        #map {
            height: 100vh;
            width: 100%;
        }
    </style>
</head>
<body>

    <div id="map"></div>

    <script>
        // Create a map centered on London
        var map = L.map('map').setView([51.5074, -0.1278], 13);  // Latitude and Longitude for London

        // Set up the tile layer (OpenStreetMap in this case)
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        // You can use a traffic layer from Mapbox (you'll need an API key for this)
        L.tileLayer('https://api.mapbox.com/styles/v1/mapbox/traffic-night-v2/tiles/{z}/{x}/{y}?access_token=YOUR_MAPBOX_ACCESS_TOKEN', {
            attribution: '&copy; <a href="https://www.mapbox.com/about/maps/">Â© Mapbox</a>',
            tileSize: 512,
            zoomOffset: -1
        }).addTo(map);

        // Optional: Add a traffic info layer if available (like a real-time traffic API)
        // Example with the Leaflet Traffic plugin (you can replace with your own traffic source)
        var trafficLayer = L.trafficLayer().addTo(map);
    </script>
</body>
</html>
